
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Patient {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  patientId  String    @unique
  visits     Visit[]
}

model Visit {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  visitDate  DateTime
  doctorId   String
  diagnosis  String
  treatment  String
  notes      String
  patient    Patient   @relation(fields: [patientId], references: [id])
  patientId  String    @db.ObjectId
}